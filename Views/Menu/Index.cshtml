@model List<FoodMenu.Models.Plate>;
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <h1>Pick your favorite Plate!</h1>
        @foreach (var item in Model)
        {
            <div class="col-6">
                <h3>@item.Name</h3>
            </div>
            <div class="d-flex justify-content-center">
                <img src="@item.ImageUrl" />
            </div>
            <div class="d-flex justify-content-center">
                <h4>@item.Price.ToString("N2") Dollars</h4>
            </div>
            <div class="d-flex justify-content-center">
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
            </div>
        }
    </div>
</div>